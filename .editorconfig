# EditorConfig is awesome: https://EditorConfig.org
# This file ensures consistent coding styles across different editors and IDEs

# Top-most EditorConfig file
root = true

# ============================================================================
# Universal Settings
# ============================================================================

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# ============================================================================
# Language-Specific Settings
# ============================================================================

# Python
[*.py]
indent_size = 4
max_line_length = 88  # Black default

# JavaScript/TypeScript
[*.{js,jsx,ts,tsx}]
indent_size = 2
quote_type = single

# Web files
[*.{html,css,scss,sass,less}]
indent_size = 2

# JSON
[*.{json,jsonc}]
indent_size = 2

# YAML
[*.{yml,yaml}]
indent_size = 2

# Shell scripts
[*.{sh,bash,zsh}]
indent_size = 4
# Keep trailing whitespace in shell here-documents
[*.sh]
trim_trailing_whitespace = false

# Makefiles
[{Makefile,makefile,*.mk}]
indent_style = tab
indent_size = 4

# Go
[*.go]
indent_style = tab
indent_size = 4

# Rust
[*.rs]
indent_size = 4
max_line_length = 100

# Ruby
[*.{rb,rake}]
indent_size = 2

# Docker
[{Dockerfile,dockerfile,*.dockerfile}]
indent_size = 4

# Kubernetes/Helm
[*.{yaml,yml}]
indent_size = 2

# ============================================================================
# Documentation
# ============================================================================

# Markdown
[*.{md,mdx}]
trim_trailing_whitespace = false
max_line_length = 80

# reStructuredText
[*.rst]
indent_size = 3
max_line_length = 80

# ============================================================================
# Configuration Files
# ============================================================================

# Git
[.git{config,ignore,attributes,modules}]
indent_size = 4

# EditorConfig
[.editorconfig]
indent_size = 4

# Package files
[{package.json,package-lock.json,*.lock}]
indent_size = 2

# RC files
[*.{bashrc,zshrc,vimrc}]
indent_size = 2

# ============================================================================
# Special Files
# ============================================================================

# CSV/TSV
[*.{csv,tsv}]
trim_trailing_whitespace = false
insert_final_newline = false

# Patch files
[*.{diff,patch}]
trim_trailing_whitespace = false

# Binary files - no modifications
[*.{jpg,jpeg,png,gif,ico,pdf,zip,tar,gz,7z,exe,dll,so,dylib}]
indent_style = unset
indent_size = unset
end_of_line = unset
insert_final_newline = unset
trim_trailing_whitespace = unset
charset = unset