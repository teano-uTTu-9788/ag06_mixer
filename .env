# AG06 Production Configuration
# Sane defaults for low-latency audio processing

# API Configuration
API_PORT=5001
API_HOST=0.0.0.0

# Audio Configuration
AUDIO_RATE=44100
AUDIO_BLOCK=512
AUDIO_DEVICE=AG06

# Streaming Configuration
STREAM_HZ=10
SSE_BUFFER_SIZE=8

# Gunicorn Configuration
WORKERS=1
WORKER_CLASS=gevent
WORKER_CONNECTIONS=100
TIMEOUT=30

# Monitoring
ENABLE_METRICS=true
LOG_LEVEL=INFO